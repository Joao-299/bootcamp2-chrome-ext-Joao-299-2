{
  "manifest_version": 2,
  "name": "Quick Note Test",
  "version": "1.0.1",
  "description": "Uma extensão para salvar uma anotação de texto rápida.",
  "permissions": ["storage", "contextMenus"],
  "background": {
    "scripts": ["src/background/service-worker.js"],
    "persistent": true
  },
  "browser_action": {
    "default_popup": "src/popup/popup.html",
    "default_icon": {
      "16": "icons/icon16.png",
      "32": "icons/icon32.png",
      "48": "icons/icon48.png",
      "128": "icons/icon128.png"
    }
  },
  "icons": {
    "16": "icons/icon16.png",
    "32": "icons/icon32.png",
    "48": "icons/icon48.png",
    "128": "icons/icon128.png"
  }
}